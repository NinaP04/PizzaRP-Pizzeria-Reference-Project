import threading
import sys

TIMEOUT = 10  # Sekunden bis Auto-Logout

def logout():
    print("\n‚õî Du wurdest wegen Inaktivit√§t ausgeloggt!")
    sys.exit()

while True:
    # Timer starten
    timer = threading.Timer(TIMEOUT, logout)
    timer.start()

    try:
        eingabe = input(f"Gib etwas ein (Logout nach {TIMEOUT} Sekunden Inaktivit√§t): ")
        timer.cancel()  # Timer stoppen, weil Eingabe erfolgte
    except:
        pass

    # Wenn der Benutzer aktiv war:
    if eingabe.lower() in ("exit", "quit", "logout"):
        print("üëã Benutzer hat sich abgemeldet.")
        break

    print("‚û°Ô∏è Deine Eingabe war:", eingabe)
    print()
